<div class="container-fluid">
    <form method="POST", action="/addNewArticle">
        <div class="form-group">
            <input type="text" class="form-control" name="articleName" id="articleName" placeholder="Введите наименование статьи">
        </div>

        <div class="form-group">
            <textarea class="form-control" name="articleText" id="articleText" rows="10" placeholder="Введите содержание статьи"></textarea>
        </div>

        <input class="btn btn-primary" type="submit" value="Добавить">

    </form>
</div>